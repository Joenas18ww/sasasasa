    .grid { display: grid; gap: 1rem; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); }
    .dot { width: 10px; height: 10px; border-radius: 50%; display: inline-block; margin-right: 6px; }
    .dot.green { background: #2ecc71; }   /* AC occupied */
    .dot.blue { background: #3498db; }    /* USB occupied */
    .dot.purple { background: #9b59b6; }  /* Type-C occupied */
    .dot.gray { background: #95a5a6; }    /* Vacant */
    .badge { display: inline-block; padding: 2px 8px; border-radius: 999px; font-size: 12px; background: #eee; margin-left: 8px; }
  </style>
</head>
