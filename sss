  <!-- Minimal script to update counts -->
  <script>
    // Example data (replace with real values)
    const outlets = [
      { ac: true, usb: true, typec: true, voltage: 250 },
      { ac: false, usb: true, typec: false, voltage: 250 },
      { ac: true, usb: false, typec: false, voltage: 110 }
    ];
    const activeLoads = outlets.reduce((sum, o) => sum + (o.ac?1:0) + (o.usb?1:0) + (o.typec?1:0), 0);
    document.getElementById('active-loads').textContent = activeLoads;
    document.getElementById('source-state').textContent = 'Inverter'; // or 'Grid'
  </script>
